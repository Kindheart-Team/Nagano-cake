
<h1>
  <%= @customer.last_name %>
  <%= @customer.first_name %>
  さんの会員情報編集
</h1>


<%#= form_with model: @customer, url: admin_customer_path(@customer),local:true do |f| %>
<%= form_with model: @customer, url: admin_customer_path(@customer),method: :patch do |f| %>

  <div class="form-group row">
    <%= f.label "会員ID",class: "col-md-2" %>
  <div class = "col-md-10">
    <%= @customer.id %>
  </div>
  </div>


  <div class="form-group row" >
    <%= f.label "氏名",class: "col-md-2" %>
    <%= f.text_field :last_name, class: 'form-control customer-last_name col-md-3' %>

    <%= f.text_field :first_name, class: 'form-control customer-first_name col-md-3 ml-3' %>
  </div>


  <div class="form-group row">
    <%= f.label "フリガナ",class: "col-md-2" %>
    <%= f.text_field :last_name_kana, class: 'form-control customer-last_name_kana col-md-3' %>

    <%= f.text_field :first_name_kana, class: 'form-control customer-first_name_kana col-md-3 ml-3' %>
  </div>


  <div class="form-group row">
    <%= f.label "郵便番号",class: "col-md-2" %>
    <%= f.text_field :post_code, class: 'form-control customer-post_code col-md-3 ml-3' %>
  </div>


  <div class="form-group row">
    <%= f.label :address, "住所",class: "col-md-2" %>
    <%= f.text_field :address, class: 'form-control customer-address col-md-3 ml-3' %>
  </div>


  <div class="form-group row">
    <%= f.label :phone, "電話番号",class: "col-md-2" %>
    <%= f.text_field :phone, class: 'form-control customer-phone col-md-3 ml-3' %>
  </div>


  <div class="form-group row">
    <%= f.label :email, "メールアドレス",class: "col-md-2" %>
    <%= f.text_field :email, class: 'form-control customer-email col-md-3 ml-3' %>
  </div>


  <div class="form-group row">
    <%= f.label :is_deleted, "会員ステータス",class: "col-md-2" %>
    <%#= f.text_field :is_deleted, class: 'form-control customer-is_deleted col-md-3 ml-3' %>

    <%= f.radio_button :is_deleted, false %>
    <%= f.label :is_deleted, "有効", class: "mr-3" %>

    <%= f.radio_button :is_deleted, true %>
    <%= f.label :is_deleted, "退会" %>
  </div>

  <%= f.submit "変更を保存", class: "btn btn-sm btn-success" %>


<% end %>

