<body>
  
  <h1>ジャンル一覧・追加</h1>

<div>
  <%= flash[:notice] %>
</div>

<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <% end %>


<%= form_with model: @genre do |f| %>
<p></p>
  <label for="inputTitle"></label><br>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title"%><br>

  <%= f.submit 'Create Book',class: "btn btn-success" %>
<% end %>
</div>
  
  
  
  <table class="table">
  <thead>
    <tr>
      <th></th>
      <th>ジャンル</th>
      </tr>
    </thead>

<tbody>
  
<% @genres.each do |genre| %>
    <tr>
      <td><%= link_to genre_path(admin.genre) do %>
  <% end %>
      </td>

      <td>
      <%= link_to genre_path(genre.id) do %>
      <%= genre.title %>
      <% end %>
      </td>

      <td><%= genre.body %></td>
      
      <td>
          
       <%= link_to "編集する", edit_genre_path(@genre.id), class: "btn btn-sm btn-success" %>
      
    </tr>
<% end %>
      
    </tbody>

</table>
</div>
