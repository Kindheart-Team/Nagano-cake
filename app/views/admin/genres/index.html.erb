<h1>Admin::Genres#index</h1>
<p>Find me in app/views/admin/genres/index.html.erb</p>

<body>

  <h1>ジャンル一覧・追加</h1>

<from>
  <%= form_with model: @genre, url: '/genres', method: :post do |f| %>
    <h4>ジャンル名</h4>
    <%= f.text_field :name %>
    <div><%= f.submit '新規登録', class: "btn btn-success" %></div>
  <% end %>
</from>


  <table class="table">
  <thead>
    <tr>
      <th></th>
      <th>ジャンル</th>
      </tr>
    </thead>

<tbody>

<% @genres.each do |genre| %>
    <tr>

      <td>
      <%= genre.name %>
      </td>

      <td>
       <%= link_to "編集する", edit_genre_path(@genre.id), class: "btn btn-sm btn-success" %>
      </td>

    </tr>
<% end %>

    </tbody>

</table>
</div>
  </body>
