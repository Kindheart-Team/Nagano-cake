<body>

  <h1>ジャンル一覧・追加</h1>


  <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
    <h4>ジャンル名</h4>
    <%= f.text_field :name %>
    <div><%= f.submit '新規登録', class: "btn btn-success" %></div>
  <% end %>



  <table class="table">
  <thead>
    <tr>
      <th></th>
      <th>ジャンル</th>
      </tr>
    </thead>

<tbody>

<% @genres.each do |genre| %>
    <tr>

      <td>
      <%= genre.name %>
      </td>

      <td>
       <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %>
      </td>

    </tr>
<% end %>

    </tbody>

</table>
</div>
  </body>