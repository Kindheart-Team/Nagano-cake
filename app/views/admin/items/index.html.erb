
<h1>商品一覧</h1>
  <%= link_to new_admin_item_path do %>
    <button type="button" class="btn btn-light rounded-circle p-0" style="width:2rem;height:2rem;">＋</button>
    <%#i class="fas fa-plus"></i%>
  <% end %>

<table class="table">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜き価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
        <th></th>
      </tr>
    </thead>

<tbody>
<% @items.each do |item| %>

    <tr>
      <td><%= item.id %></td>

      <td>
      <%= link_to admin_item_path(item.id) do %>
      <%= item.name %>
      <% end %>
      </td>

      <td><%= item.price %></td>

      <td><%= item.genre.name %></td>

      <td><%= item.is_active ? '販売中' : '販売停止中' %></td>
   </tr>
<% end %>


    </tbody>

</table>

