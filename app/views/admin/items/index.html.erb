
<h1>商品一覧</h1>

<table class="table">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜き価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
        <th></th>
      </tr>
    </thead>

<tbody>
<% @items.each do |item| %>

    <tr>
      <td>
      <%= item.id %>
      </td>

      <td>
      <%= link_to item_path(item) do %>
      <%= iten.name %>
      <% end %>
      </td>

      <td>
      <%= item.price %>
      </td>

      <td>
      <%= item.genre_id %>
      </td>

      <td>
      <% if item.is_active %>
      <p>販売中</p>
      <%else%>
      <p>販売停止中</p>
      <% end %>
      </td>
   </tr>
<% end %>


    </tbody>

</table>