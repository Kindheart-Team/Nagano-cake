<h3>商品新規登録</h3>

<%= form_with model: @item, url: admin_items_path,method: :post do |f| %>
<h4>商品画像</h4>
  <%= f.file_field :imege, accept: "image/*" %>
<h4>商品名</h4>
  <%= f.text_field :name %>
<h4>商品説明</h4>
  <%= f.text_area :description %>
<h4>ジャンル</h4>
　<%= f.select :genre_id, @genres, {prompt: "選択してください"}, :class => 'form-control', :id => 'genre_id' %>
<h4>税抜価格</h4>
  <%= f.text_field :price %>円
<h4>販売ステータス</h4>
  <%= f.radio_button :is_active, true %>
  <%= f.label :is_active_true, "販売中" %>
  <%= f.radio_button :is_active, false %>
  <%= f.label :is_active_false, "販売停止中" %>

<%= f.submit '新規登録', class: "btn btn-success" %>
<% end %>