<!DOCTYPE html>

<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body style="background-color:#fffff0;">

  <header>
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #f9c89b">
      <div class="container">

      <div class="navbar-brand p-3" href="/">
        <%= link_to root_path do %>
          <%= image_tag('logo.png') %>
        <% end %>
      </div>

      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">

      <% if customer_signed_in? %>
      <div class="mr-5 mt-3">
        <p>
          ようこそ、<%= current_customer.last_name %>さん!
        </p>
      </div>


        <div><%= link_to my_page_path,class: 'nav-link text-light' do %>
        <button type="button" class="btn btn-light btn-sm mr-3">マイページ</button>
        <% end %>
        </div>

        <div><%= link_to items_path,class: 'nav-link text-light' do %>
        <button type="button" class="btn btn-light btn-sm mr-3">商品一覧</button>
        <% end %>
        </div>


        <div><%= link_to cart_items_path,class: 'nav-link text-light' do %>
        <button type="button" class="btn btn-light btn-sm mr-3">カート</button>
        <% end %>
        </div>


        <div><%= link_to destroy_customer_session_path, method: :delete,class: 'nav-link text-light' do %>
        <button type="button" class="btn btn-light btn-sm ">ログアウト</button>
        <% end %>
        </div>



      <% elsif admin_signed_in? %>

        <div><%= link_to admin_items_path,class: 'nav-link text-light' do %>
        <button type="button" class="btn btn-light btn-sm mr-3">商品一覧</button>
        <% end %>
        </div>


        <div><%= link_to admin_customers_path,class: 'nav-link text-light' do %>
        <button type="button" class="btn btn-light btn-sm mr-3">会員一覧</button>
        <% end %>
        </div>

        <div><%= link_to admin_orders_path,class: 'nav-link text-light' do %>
        <button type="button" class="btn btn-light btn-sm mr-3">注文一覧</button>
        <% end %>
        </div>

        <div><%= link_to admin_genres_path,class: 'nav-link text-light' do %>
        <button type="button" class="btn btn-light btn-sm mr-3">ジャンル一覧</button>
        <% end %>
        </div>


        <div><%= link_to destroy_admin_session_path, method: :delete,class: 'nav-link text-light' do %>
        <button type="button" class="btn btn-light btn-sm">ログアウト</button>
        <% end %>
        </div>



      <% else %>

      <div> <%= link_to about_path,class: 'nav-link text-light' do  %>
        <button type="button" class="btn btn-light btn-sm mr-3">about</button>
        <% end %>
        </div>


        <div><%= link_to items_path,class: 'nav-link text-light' do  %>
        <button type="button" class="btn btn-light btn-sm mr-3">商品一覧</button>
        <% end %>
        </div>



        <div><%= link_to new_customer_registration_path,class: 'nav-link text-light' do %>
        <button type="button" class="btn btn-light btn-sm mr-3">新規登録</button>
        <% end %>
        </div>

        <div><%= link_to new_customer_session_path,class: 'nav-link text-light' do %>
        <button type="button" class="btn btn-light btn-sm">ログイン</button>
        <% end %>
        </div>



      <% end %>
      </ul>
      </div>
      </div>
    </nav>
  </header>


    <div class="container">

    <%= yield %>
  </div>
  </body>
</html>
