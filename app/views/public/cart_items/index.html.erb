<h1>ショッピングカート</h1>

<%= button_to "全て削除", destroy_all_path, method: :delete, "data-confirm" => "本当に削除しますか？" %>

 <table class="table table-bordered">
   <thead>
     <tr>
       <th>商品名</th>
       <th>単価（税込）</th>
       <th>数量</th>
       <th>小計</th>
       <th></th>
     </tr>
   </thead>
   <tbody>
     <% @cart_items.each do |cart_item| %>
       <tr>
         <td><%= cart_item.name %></td>
         <td><%= (cart_item.add_tax_price * 1.1 ).floor %></td>
         <td><%= cart_item.amount %></td>
         <td><%= cart_item.subtotal%></td>
         <%= link_to "削除", cart_item_path(cart_item), method: :delete, "data-confirm" => "本当に削除しますか？" %>

       </tr>
     <% end %>
   </tbody>
 </table>

       <table class="table table-bordered">
         <% @cart_items.each do |cart_item| %>
           <th>合計金額</th>
           <td>¥<%= @total += cart_item.subtotal %></td>
         <% end %>
       </table>


