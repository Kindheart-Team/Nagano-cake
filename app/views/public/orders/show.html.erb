<div class = "container mt-3">

  <h1>注文履歴詳細</h1>

  <h3>注文情報</h3>

  <table class="table table-bordered">

  <thead>
  <tr>
    <th>注文日</th>

    <th>配送先</th>

    <th>支払方法</th>

    <th>ステータス</th>
  </tr>
  </thead>


  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at %></td>

      <td><%= order.address %></td>

      <td><%= order.payment_method %></td>

      <td><%= order.status %></td>
    </tr>
  <% end %>
  </tbody>
  </table>



  <h3>請求情報</h3>

<table class="table table-bordered">
  <thead>
  <tr>
    <th>商品合計</th>

    <th>配送料</th>

    <th><strong>ご請求額</strong></th>
  </tr>
  </thead>


  <tbody>
  <% @orders.each do |order| %>
<tr>
  <td><%= order.price %></td>

  <td><%= order.shipping_cost %></td>

  <td><%= order.total_payment %></td>
  </tr>
  <% end %>
  </tbody>
</table>

</div>




<h3>注文内容</h3>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>商品</th>

        <th>単価(税込)</th>

        <th>個数</th>

        <th>小計</th>
      </tr>
    </thead>


<tbody>

<% @orders.each do |order| %>

    <tr>

      <td><%= order.item %></td>

      <td><%= order.price %></td>

      <td><%= order.amount %></td>

      <td><%= order.price %></td>

   </tr>

<% end %>

    </tbody>

</table>











