<h1>public/orders/newページ</h1>

<%# 参考サイト「https://qiita.com/saru1439s7/items/17e1cb2a009fc243bca0」レイアウトもページ下部に記載。動作チェック完了後、コメント消去 %>

<h4>注文情報入力</h4>
<%= form_with model: @order, url: "/orders/confirm", method: :post, local: true do |f| %>

  <h5>支払方法</h5>
      <p>
        <%= f.radio_button :payment_method,:クレジットカード,checked: "checked" %>
        <%= f.label :payment_method, "クレジットカード" %>
       <br>
        <%= f.radio_button :payment_method, :銀行振込 %>
        <%= f.label :payment_method, "銀行振込" %>
      </p>

  <h5>お届け先</h5>
    <%= f.radio_button :address_option, 0, checked: "checked" %>
      <%= f.label :order_address, "ご自身の住所" %>
    <br>
     〒<%= current_customer.post_code %>
        <%= current_customer.address %><br>
        <%= current_customer.last_name %><%= current_customer.first_name %>
    <br>

    <%= f.radio_button :address_option, 1 %>
      <%= f.label :order_address, "登録済住所から選択" %>
      <br>
        <%= f.collection_select :customer_id, @addresses, :id, :full_adresses %>

    <%= f.radio_button :address_option, 2 %>
      <%= f.label :order_address, "新しいお届け先" %>
        <table>
          <tr>
            <td><%= f.label :shipping_post_code, "郵便番号(ハイフンなし)" %></td>
            <td><%= f.text_field :shipping_post_code　%></td>
          </tr>
          <tr>
            <td><%= f.label :shipping_address, "住所" %></td>
            <td><%= f.text_field :shipping_address %></td>
          </tr>
          <tr>
            <td><%= f.label :shipping_name, "宛名" %></td>
            <td><%= f.text_field :shipping_name %></td>
          </tr>
        </table>

   <%= f.submit "確認画面へ進む" %>
<% end %>
