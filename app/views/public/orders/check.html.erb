<h1>public/orders/checkページ</h1>

<%# 参考サイト「https://qiita.com/saru1439s7/items/17e1cb2a009fc243bca0」レイアウトもページ下部に記載。動作チェック完了後、コメント消去 %>

<h4>注文情報確認</h4>
<table>
  <th>商品名</th>
  <th>単価(税込)</th>
  <th>数量</th>
  <th>小計</th>
  </tr>
   <% total = 0 %>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= attachment_image_tag(cart_item.item, :image, size: "60x50", fallback: "no_image.jpg") %>
            <%= cart_item.item.name %>
          </td>
          <td><%= (cart_item.item.price*1.10).to_i %></td>
          <td><%= cart_item.amount %></td>
          <td>
             <% subtotal = ((cart_item.item.price*cart_item.amount)*1.10).to_i %>
             <%= subtotal %>
           </td>
         </tr>
         <% total += (cart_item.item.price*cart_item.amount)*1.10 %>
     <% end %>
</table>

<table>
     <tr>
       <th>送料</th>
        <% @order.shipping_cost = 800 %>
       <td><%= @order.shipping_cost %></td>
      </tr>
     <tr>
       <th>商品合計</th>
       <td><%= total.to_i %></td>
      </tr>
      <tr>
        <th>請求金額</th>
        <% @order.total_payment = @order.shipping_cost + total.to_i %>
        <td><%= @order.total_payment %></td>
      </tr>
</table>
 <tr>
  <th>支払方法</th>
  <td><%= @order.payment_method %></td>
 </tr>
 <tr>
   <th>お届け先</th>
   <td>
    <%= @order.shipping_post_code %>
    <%= @order.shipping_address %>
    <%= @order.shipping_name %>
   </td>
  </tr>

<%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
  <%= f.hidden_field :customer_id %>
  <%= f.hidden_field :shipping_cost %>
  <%= f.hidden_field :total_payment %>
  <%= f.hidden_field :payment_method %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :address %>
  <%= f.hidden_field :post_code %>
  <%= f.hidden_field :status %>
  <%= f.submit "注文を確定する", class: "btn btn-success" %>
<% end %>
