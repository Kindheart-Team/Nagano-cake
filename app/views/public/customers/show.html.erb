<h1>マイページ</h1>

<h3>登録情報</h3>

<th><%= link_to "編集する", my_page_edit_path(@customer), class: "btn btn-success" %></th><br>
<table class="table table-bordered">
  <tr>
    <th>氏名</th>
    <td>
      <%= @customer.last_name %>
      <%= @customer.first_name %>
    </td>
  </tr>
  <tr>
    <th>カナ</th>
    <td>
      <%= @customer.last_name_kana %>
      <%= @customer.first_name_kana %>
    </td>
  </tr>
  <tr>
    <th>郵便番号</th>
    <td><%= @customer.post_code %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= @customer.phone %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @customer.email %></td>
  </tr>
</table>


  <tr>
    <th>配送先</th>
    <%= link_to "一覧を見る", addresses_path(@customer.id), class: "btn btn-primary" %>
  </tr>
